{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "age": {
        "type": "integer",
        "minimum": 18
      },
      "addresses": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "street": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "postalCode": {
              "type": "string",
              "pattern": "^[0-9]{5}$"
            }
          },
          "required": ["street", "city", "postalCode"]
        }
      }
    },
    "required": ["id", "name", "age"]
  }
}
