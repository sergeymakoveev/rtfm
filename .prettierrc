{
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "parser": "typescript",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "useTabs": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["*.svg", "*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.json", ".eslintrc", ".prettierrc"],
      "options": {
        "parser": "json",
        "endOfLine": "auto",
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "parser": "css",
        "endOfLine": "auto",
        "singleQuote": false
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80,
        "parser": "markdown"
      }
    }
  ]
}
