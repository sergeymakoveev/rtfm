{
	"bracketSpacing": true,
	"jsxBracketSameLine": true,
	"parser": "typescript",
	"printWidth": 120,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": ["*.json", ".eslintrc"
			],
			"options": {
				"parser": "json",
				"endOfLine": "auto",
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["*.js", "*.jsx"
			],
			"options": {
				"endOfLine": "auto"
			}
		},
		{
			"files": ["*.ts", "*.tsx"
			],
			"options": {
				"endOfLine": "auto"
			}
		}
	]
}