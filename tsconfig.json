{
  "compilerOptions": {
    "target": "es5",
    "types": ["node", "jest"],
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "pretty": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es6", "es2015.symbol", "es2017.object", "es2016.array.include"]
  },
  "include": ["**/*.json", "**/*.js", "**/*.ts", "**/*.tsx"]
}
